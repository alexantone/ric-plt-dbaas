FROM ubuntu:latest

#ARG ARCH=amd64
ARG ARCH=arm64

ENV GO_VER=1.11.4
ENV GO_PKG=go${GO_VER}.linux-${ARCH}.tar.gz

# Install redis tools & golang & git
RUN apt-get update && \
    apt install -y redis-tools && \
    apt install -y git && \
    apt install -y wget && \
    wget https://dl.google.com/go/${GO_PKG} && \
    tar -xvf ${GO_PKG} && \
    mv go /usr/local && \
    apt-get clean

# Copy sourcefiles
COPY ./testapplication ./testapplication

# Install go testapplication
RUN export GOROOT=/usr/local/go && \
    export GOPATH=$HOME/Projects/Proj1 && \
    export PATH=$GOPATH/bin:$GOROOT/bin:$PATH && \
    go get github.com/go-redis/redis && \
    go build /testapplication/go/testapp.go

# Keep the container alive
ENTRYPOINT ["tail", "-f", "/dev/null"]
